<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700"
    tools:context=".FindOthersFragment">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <ImageView
        android:scaleType="fitCenter"
        android:layout_margin="25dp"
        android:src="@drawable/trim_200_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trim"/>

            <TextView
                android:layout_below="@+id/trim"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Cut Audio"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:scaleType="fitCenter"
                android:layout_margin="25dp"
                android:src="@drawable/merge_300_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/merge"/>

            <TextView
                android:layout_below="@+id/merge"
                style="@style/TextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Merge Audio"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
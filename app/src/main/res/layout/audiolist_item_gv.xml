<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container_music_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_select_background"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/img_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/music_item_image"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/img_container"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UnknownIdInLayout">
            <LinearLayout
                android:paddingEnd="65dp"
                android:id="@+id/infoContainer"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text="Shape of you"
                    android:id="@+id/music_name"/>

                <TextView
                    android:id="@+id/album_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text="unknown"/>
            </LinearLayout>

                <ImageView
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/more_items"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/play_media_player"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/play"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/more_items"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_more_vert_24"/>
            </RelativeLayout>
        </RelativeLayout>


</RelativeLayout>
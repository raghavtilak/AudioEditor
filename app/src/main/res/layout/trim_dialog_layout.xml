<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="Dimensions:"/>
        <Spinner
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/dimenSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:spinnerMode="dropdown"
style="@style/mySpinnerItemStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="Video Quality:"/>
        <Spinner
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/qualitySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:spinnerMode="dropdown"
            style="@style/mySpinnerItemStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="Frame rate:"/>
        <Spinner
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/framerateSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:spinnerMode="dropdown"
            style="@style/mySpinnerItemStyle"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trim Options>>"
        android:textColor="@color/teal_200"
        android:id="@+id/textViewTrimoptions"
        />
        <ImageButton
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textViewTrimoptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iTap"
            android:src="@drawable/ic_baseline_info_outline_24"
            android:rotation="180"/>
    </RelativeLayout>
    <RadioGroup
        android:padding="10dp"
        android:checkedButton="@id/slow_trim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiog_trimOption">
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quick_trim"
            android:textColor="@color/teal_700"
            android:text="Quick Trim"/>
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slow_trim"
            android:textColor="@color/teal_700"
            android:text="Re-encode"/>
    </RadioGroup>
</LinearLayout>
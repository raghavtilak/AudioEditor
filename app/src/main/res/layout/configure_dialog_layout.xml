<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        style="@style/TextMedium"
        android:id="@+id/durationTV"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teal_700"
        android:text="Duration"/>

    <RelativeLayout
        android:id="@+id/durationLL"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/durationTV">
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/durationSeekbarTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="1 second"/>
        <com.google.android.material.slider.RangeSlider
            android:paddingTop="5dp"
            android:valueFrom="1"
            android:valueTo="10"
            android:stepSize="1"
            android:layout_below="@+id/durationSeekbarTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/durationSeekbar"
            />

    </RelativeLayout>

    <RadioGroup
        android:layout_below="@id/durationLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupFade"
        android:checkedButton="@id/radioFade"
        android:orientation="horizontal">
        <RadioButton
            android:textColor="@color/teal_700"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fade"
            android:id="@+id/radioFade"/>
        <RadioButton
            android:textColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No-Fade"
            android:id="@+id/radioNoFade"/>

    </RadioGroup>

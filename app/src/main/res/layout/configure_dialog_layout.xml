    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroupFade">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkOverlap" />
        <TextView
            style="@style/TextMedium"
            android:layout_toEndOf="@+id/checkOverlap"
            android:textColor="@color/teal_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOverlap"
            android:text="Overlap"/>
        <TextView
            android:layout_toEndOf="@+id/checkOverlap"
            android:textColor="@color/teal_700"
            android:layout_below="@+id/textOverlap"
            style="@style/TextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Should first stream end overlap with second stream start."/>

    </RelativeLayout>

</RelativeLayout>
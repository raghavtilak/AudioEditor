<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/container_music_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/item_select_background"
    android:layout_height="wrap_content">

<com.google.android.material.card.MaterialCardView
    app:cardBackgroundColor="@color/purple_700"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="18dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/img_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerInside"
                android:src="@drawable/music_item_image"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/img_container"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="Shape of you"
            android:id="@+id/music_name"/>

        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="unknown"/>
        </LinearLayout>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/play_media_player"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/play"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>



</RelativeLayout>